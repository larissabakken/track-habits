// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator" 
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Habit {
  id        String   @id @default(uuid()) // uuid() is a function that generates a v4 UUID (globally unique identifier).
  title     String
  createdAt DateTime

  daysHabits DayHabit[]
  weekDays   HabitWeekDays[]

  @@map("habits")
}

model HabitWeekDays {
  id       String @id @default(uuid()) // uuid() is a function that generates a v4 UUID (globally unique identifier).
  habit_id String
  week_day Int

  habit Habit @relation(fields: [habit_id], references: [id])

  @@unique([habit_id, week_day])
  @@map("habit_week_days")
}

model Day {
  id   String   @id @default(uuid()) // uuid() is a function that generates a v4 UUID (globally unique identifier).
  date DateTime

  daysHabits DayHabit[]

  @@unique([date])
  @@map("days")
}

model DayHabit {
  id       String @id @default(uuid()) // uuid() is a function that generates a v4 UUID (globally unique identifier).
  day_id   String
  habit_id String

  day   Day   @relation(fields: [day_id], references: [id])
  habit Habit @relation(fields: [habit_id], references: [id])

  @@unique([day_id, habit_id])
  @@map("day_habits")
}
